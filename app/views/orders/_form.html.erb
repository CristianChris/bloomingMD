<%= render 'shared/errors', obj: @order  %>

<div class="row"> 
	<div class="col-xs-12">
		<%= form_for(@order, :html => {class: "form-horizontal", role: "form"}) do |f| %>

			<div class="form-group">
				<div class="control-label col-sm-2 ">
					<%= f.label :Mesajul_de_felicitare%>
				</div>
				<div class="col-sm-8 ">
					<%= f.text_area :greeting, rows: 6, class: "form-control", placeholder: "Mesajul de felicitare", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :Detalii_de_livrare %>
				</div>
				<div class="col-sm-8">
					<%= f.text_area :special_request, rows: 6, class: "form-control", placeholder: "Detalii de livrare" %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :Data_livrării %>
				</div>
				<div class="col-sm-2">
					<%= f.text_field :delivery_date, class: "form-control", placeholder: "Selectati data" %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-xs-8 col-xs-offset-2">
					<%= f.submit :Înregistrează, class: 'btn btn-primary btn-lg' %>
				</div> 
			</div> 

			<% end %>
			<div class="col-xs-8 col-xs-offset-2">
				[ <%= link_to "Anulează și treci la lista de comenzi", orders_path %> ]
			</div>
	</div>
</div>

